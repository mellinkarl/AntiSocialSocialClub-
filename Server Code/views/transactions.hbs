 <title>Browsing Transactions</title>
 <script src="/index.js" charset="utf-8" defer></script>
 <main class="content">
  <H1 id="center" class="title"><strong>Transactions</strong></H1>
<div id="nav-container">
  <div id="button" class="next-to post"><a href="/customers">Customers</a></div>  
  <div id="button" class="next-to post"><a href="/merchandise">Merchandise</a></div>
  <div id="button" class="next-to post"><a href="/favorites">Favorites</a></div>
  <div id="button" class="next-to post"><a href="/transactionDetails">Trans. Details</a></div>

</div>
    

<div class="overflow">
  <table id="transaction-table" class="center-table">
    <thead>

    <tr>
        <th>ID</th>
        <th>Customer Name</th>
        <th>Transaction Date</th>
        <th></th>
    </tr>
    </thead>
   <tbody>

        
        {{#each data}}
        <tr data-value={{this.transactionID}}>
            <td>{{this.transactionID}}</td>
            <td>{{this.customerName}}</td>
            <td>{{this.transactionDate}}</td>
            <td><button onclick="deleteTrans({{this.transactionID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
  </table>
</div>
<div class="button-container">
  <button type="button" id="new-record-button">New Transaction</button>
  <button type="button" id="toggle-edit">Edit a Transaction</button>
</div>

<div>
  <div id="insert" class="hidden">
    <form method="POST" action="/add-transaction">
      <legend><strong>Insert Transaction</strong></legend>
      <fieldset> 
        <div><label>Customer Name:</label> <select name="customerID">
            <option value="test">Select a Customer</option>
            {{#each dropdown1}}
            <option value="{{this.customerID}}">{{this.customerName}}</option>
            {{/each}}
            </select></div>
          <div><label>Date: </label><input type="date" name="transactionDate"></div>
        <div>
          <input class="btn" type="submit">
          <input class="btn" type="button" value="Cancel" id="Cancel">
        </div>
      </fieldset>
    </form>
  </div>

  <div id="update" class="hidden">
    <form method="POST" id="update-transaction" action="/update-transaction">
      <legend><strong>Update Transaction</strong></legend>
      <fieldset class="fields">
        <div><label> Transaction:</label> <select name="transactionID" id="mySelect">
          <option value="test">Select a Transaction</option>
          {{#each data}}
          <option value="{{this.transactionID}}">{{this.transactionID}}-{{this.customerName}}</option>
          {{/each}}
        </select></div>
        <label> Customer:</label> <select name="customerID" id="mySelect">
          <option value="test">Select a Person</option>
          {{#each dropdown1}}
          <option value="{{this.customerID}}">{{this.customerName}}</option>
          {{/each}}
        </select>
        <div><label>Date: </label><input type="date" name="transactionDate"></div>
        <input class="btn" type="submit">
      </fieldset>
    </form>
  </div>
</div>

<script src="/delete_trans.js"></script>

</main>
